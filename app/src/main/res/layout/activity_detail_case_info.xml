<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wgy.cigaretteentry.model.codeCopyModel.detailCaseInfo.DetailCaseInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="详细内容"
            android:textColor="@color/detail_info_title_gray"
            android:textSize="40px" />

        <Button
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/detail_info_bg">

            <ImageView
                android:id="@+id/p1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:text="案件年号"
                android:textColor="@color/darkblue_tx"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/p1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/year_tx"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/case_list_item_bg"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="D,[2016] ."
                android:textColor="@color/detail_info_title_gray"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p1" />

            <ImageView
                android:id="@+id/p2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/year_tx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="0dp"
                android:text="案件编号"
                android:textColor="@color/darkblue_tx"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/p2"
                app:layout_constraintTop_toBottomOf="@+id/year_tx" />

            <TextView
                android:id="@+id/number_tx"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/case_list_item_bg"
                android:gravity="center_vertical"

                android:paddingLeft="15dp"
                android:text="D,[2016] ."
                android:textColor="@color/detail_info_title_gray"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p2" />

            <ImageView
                android:id="@+id/p3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_tx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="0dp"
                android:text="用户ID"
                android:textColor="@color/darkblue_tx"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/p3"
                app:layout_constraintTop_toBottomOf="@+id/number_tx" />

            <TextView
                android:id="@+id/user_id_tx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/case_list_item_bg"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="D,[2016] ."
                android:textColor="@color/detail_info_title_gray"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p3" />

            <ImageView
                android:id="@+id/p4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_id_tx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="0dp"
                android:text="部门ID"
                android:textColor="@color/darkblue_tx"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/p4"
                app:layout_constraintTop_toBottomOf="@+id/user_id_tx" />

            <TextView
                android:id="@+id/department_id_tx"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/case_list_item_bg"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="D,[2016] ."
                android:textColor="@color/detail_info_title_gray"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p4" />

            <ImageView
                android:id="@+id/p5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/point"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/department_id_tx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="0dp"
                android:text="立案时间"
                android:textColor="@color/darkblue_tx"
                android:textSize="30px"
                app:layout_constraintLeft_toRightOf="@+id/p5"
                app:layout_constraintTop_toBottomOf="@+id/department_id_tx" />

            <TextView
                android:id="@+id/date_tx"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/case_list_item_bg"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="D,[2016] ."
                android:textColor="@color/detail_info_title_gray"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/p5" />

            <TextView
                android:id="@+id/total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="烟卷总数：465"
                android:textColor="@color/darkblue_tx"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_tx" />

            <ListView
                android:id="@+id/num_listview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:divider="#00000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_num">

            </ListView>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/detail_info_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="卷烟列表"
                android:textColor="@color/darkblue_tx"
                android:textSize="35px" />

            <ListView
                android:id="@+id/cigarette_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

            </ListView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
