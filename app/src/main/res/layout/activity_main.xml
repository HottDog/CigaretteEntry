<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_root"
    tools:context="com.wgy.cigaretteentry.MainActivity">
    <Button
        android:id="@+id/login_bn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="登录"
        app:layout_constraintRight_toLeftOf="@+id/main_root"
        app:layout_constraintLeft_toLeftOf="@+id/main_root"
        app:layout_constraintBottom_toBottomOf="@+id/main_root"
        app:layout_constraintTop_toTopOf="@+id/main_root"
       />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卷烟录入管理系统"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/main_root"
        app:layout_constraintLeft_toLeftOf="@+id/main_root"
        app:layout_constraintRight_toRightOf="@+id/main_root"
        android:layout_marginTop="100dp" />


</android.support.constraint.ConstraintLayout>
