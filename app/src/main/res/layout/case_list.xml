<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/case_list_item_bg"
    android:descendantFocusability= "blocksDescendants">
    <TextView
        android:id="@+id/serial_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="30px"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/darkblue_tx"/>
    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立案时间：2016年09月01日"
            android:textSize="24px"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案件编号：J34235342563462452645"
            android:textSize="24px"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/department_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在部门ID：4564565323245"
            android:textSize="24px"/>
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID：11353123232"
            android:textSize="24px"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总数：150"
        android:textSize="30px"
        android:textColor="@color/darkblue_tx"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/upload_or_not"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon_upload"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"/>
    <Button
        android:id="@+id/enter"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="继续录入"
        android:textColor="@color/darkblue_tx"
        android:textSize="30px"
        android:focusable = "false"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_tx_shape"
        android:layout_marginLeft="10dp"/>
</LinearLayout>