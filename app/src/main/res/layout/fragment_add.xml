<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wgy.cigaretteentry.model.codeCopyModel.addfragment.AddFragment">
    <ImageView
        android:id="@+id/p1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/root"
        app:layout_constraintLeft_toLeftOf="@id/root"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/point"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/p1"
        app:layout_constraintTop_toTopOf="@id/root"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="5dp"
        android:text="案件年号"
        android:textSize="15dp"
        android:textColor="@color/darkblue_tx"/>
    <EditText
        android:id="@+id/year_edit"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/p1"
        app:layout_constraintLeft_toLeftOf="@id/root"
        android:background="@drawable/case_list_item_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="请输入案件年号："
        android:textSize="16dp"
        android:paddingLeft="25dp"/>
    <ImageView
        android:id="@+id/p2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/root"
        app:layout_constraintLeft_toRightOf="@id/year_edit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/point"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/p2"
        app:layout_constraintTop_toTopOf="@id/root"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="5dp"
        android:text="案件编号"
        android:textSize="15dp"
        android:textColor="@color/darkblue_tx"/>
    <EditText
        android:id="@+id/number_edit"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/p2"
        app:layout_constraintLeft_toRightOf="@id/year_edit"
        android:background="@drawable/case_list_item_bg"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:hint="请输入案件编号："
        android:textSize="16dp"
        android:paddingLeft="25dp"/>
    <ImageView
        android:id="@+id/p3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@id/root"
        app:layout_constraintTop_toBottomOf="@id/year_edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/point"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/p3"
        app:layout_constraintTop_toBottomOf="@id/year_edit"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="5dp"
        android:text="所在部门ID"
        android:textSize="15dp"
        android:textColor="@color/darkblue_tx"/>
    <EditText
        android:id="@+id/department_id_edit"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/p3"
        app:layout_constraintLeft_toLeftOf="@id/root"
        android:background="@drawable/case_list_item_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="请输入部门ID："
        android:textSize="16dp"
        android:paddingLeft="25dp"/>
    <ImageView
        android:id="@+id/p4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/number_edit"
        app:layout_constraintLeft_toRightOf="@id/department_id_edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/point"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/p4"
        app:layout_constraintTop_toBottomOf="@id/number_edit"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="5dp"
        android:text="用户ID"
        android:textSize="15dp"
        android:textColor="@color/darkblue_tx"/>
    <EditText
        android:id="@+id/user_id_edit"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/p4"
        app:layout_constraintLeft_toRightOf="@id/department_id_edit"
        android:background="@drawable/case_list_item_bg"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:hint="请输入用户ID："
        android:textSize="16dp"
        android:paddingLeft="25dp"/>
    <ImageView
        android:id="@+id/p5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="@id/root"
        app:layout_constraintTop_toBottomOf="@id/department_id_edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/point"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/p5"
        app:layout_constraintTop_toBottomOf="@id/department_id_edit"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="5dp"
        android:text="立案时间"
        android:textSize="15dp"
        android:textColor="@color/darkblue_tx"/>
    <EditText
        android:id="@+id/date_edit"
        android:layout_width="250dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/p5"
        app:layout_constraintLeft_toLeftOf="@id/root"
        android:background="@drawable/case_list_item_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:hint="请输入时间日期："
        android:textSize="16dp"
        android:paddingLeft="25dp"/>
    <Button
        android:id="@+id/next"
        android:layout_width="65dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/root"
        app:layout_constraintBottom_toTopOf="@id/root"
        android:background="@mipmap/bn_next"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/cancel"
        android:layout_width="65dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/root"
        app:layout_constraintBottom_toTopOf="@id/next"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/bn_cancel"/>
</android.support.constraint.ConstraintLayout>
