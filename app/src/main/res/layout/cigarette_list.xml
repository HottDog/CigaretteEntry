<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="33dp"
    android:background="@drawable/case_list_item_bg"
    android:layout_marginBottom="8dp">
    <TextView
        android:id="@+id/index_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="40px"
        android:textColor="@color/detail_info_title_gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40px"
        android:text="中华牌"
        android:textColor="@color/darkblue_tx"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/price_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="30px"
        android:text="价格：¥200"
        android:textColor="@color/detail_info_title_gray"
        android:layout_marginLeft="13dp"
        />
    <TextView
        android:id="@+id/laser_code_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="激光码：32432545234242"
        android:textSize="30px"
        android:textColor="@color/detail_info_title_gray"
        android:layout_marginLeft="13dp"/>
</LinearLayout>